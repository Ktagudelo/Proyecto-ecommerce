extends layout.pug
- var url="https://cdn.pixabay.com/photo/2014/06/03/19/38/board-361516_960_720.jpg"

block hero
    section.hero.is-dark.is-bold
        .hero-body
            .container
                h1.title Octolion Shop
                h2.subtitle Find the best products a the best price

block content
    .container(style="flex: 1; padding: 50px 0;")
        .columns.is-multiline
            each product in products
                .column.is-one-quarter
                    .card
                        .card-image
                            figure.image(style="height: 190px")
                                img(data-src=url alt="Not found" style="height: 100%; object-fit: cover")
                        .card-content
                            h1.title= product.name
                            .button.is-fullwidth.is-primary
                                span.icon
                                    i.fas.fa-shopping-cart
                                span Add         
                                    strong= `${product.price} USD`